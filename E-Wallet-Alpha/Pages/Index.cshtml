@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if (Model.isLoggedIn)
{
    <div class="wallet-container text-center">
        <p class="page-title"><i class="fa fa-align-left"></i>Welcome @Model.LoggedInUser.Username<i class="fa fa-user" aria-hidden="true"></i></p>


        <div class="amount-box text-center">
            <img src="~/digital-wallet.png" />
            <p>Total Balance:</p>
            <p class="amount">@Model.LoggedInUser.Balance Ft</p>
        </div>

        <div class="btn-group text-center">
            <button type="button" id="add_money_btn" class="btn btn-outline-light">Add Money</button>
            <button type="button" id="withdraw_btn" class="btn btn-outline-light">Withdraw</button>
        </div>

        <div class="txn-history">
            <p><b>History</b></p>
            @foreach (var transiction in Model.LoggedInUser.Transictions)
            {
                if (transiction.DidIGetMoney)
                {
                    <p class="txn-list">@transiction.ToOrFromSomeOne paid me! Yay!<span class="credit-amount">+ @transiction.AmountOfMoney HUF</span></p>
                }
                else
                {
                    <p class="txn-list">I paid to @transiction.ToOrFromSomeOne .Yikes! <span class="debit-amount">- @transiction.AmountOfMoney HUF</span></p>
                }
            }
        </div>

        <div class="footer-menu">
            <div class="row text-center">
                <div class="col-md-3">
                    <i class="fa fa-home" aria-hidden="false"></i>
                    <p>Home</p>
                </div>

                <div class="col-md-3">
                    <i class="fa fa-inbox"></i>
                    <p>Inbox</p>
                </div>

                <div class="col-md-3">
                    <i class="fa fa-university"></i>
                    <p>Bank</p>
                </div>

                <div class="col-md-3" id="logout_div">
                    <i class="fa fa-sign-out"></i>
                    <p>Sign Out</p>
                </div>
            </div>
        </div>

    </div>



}
else
{
    <div class="welcome_page_container">
        <h1 class="display-4">Welcome To the Wallet App!</h1>
        <h3>Sign Up the use the app...</h3>
        <button type="button" id="sign_up_btn" class="btn btn-outline-light">Sign-up</button>
        <h5>Or if you already have an Account, Sign In Please!</h5>
        <button type="button" id="sign_in_btn" class="btn btn-outline-light">Login</button>

    </div>
}