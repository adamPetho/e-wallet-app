@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if (Model.isLoggedIn)
{
    <div class="text-center">
        <h1 class="display-4">Welcome @Model.Username</h1>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">Welcome new User, go and log in</h1>
    </div>
}

